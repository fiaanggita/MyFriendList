<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFriendList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_200</item>
        <item name="colorPrimaryVariant">@color/dark_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_yellow</item>
        <item name="colorSecondaryVariant">@color/dark_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonGeneral">
        <item name="android:backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:backgroundTint">@color/dark_gray_300</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray_500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle.AppName">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/dark_gray_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_gray_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Title.Regular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_gray_500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray_300</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Subtitle.Reguler">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray_300</item>
        <item name="android:textStyle">normal</item>

    </style>
